# Development Environment Variables
# Copy this to .env.local for local development

# ========================================
# üî• FIREBASE CLIENT CONFIGURATION
# ========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ========================================
# üîê FIREBASE ADMIN SDK (REQUIRED FOR API SECURITY)
# ========================================
# Get these from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"

# ========================================
# üåê DEVELOPMENT SETTINGS
# ========================================
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Temporarily disable CSRF protection in development for testing
DISABLE_CSRF_IN_DEV=true

# Your existing environment variables should also be included
# NODE_ENV=development
# JWT_SECRET=your-jwt-secret-here
# CSRF_SECRET=your-csrf-secret-here
# (add your other env vars here) 