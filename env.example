# Firebase Configuration
# Get these values from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Rate Limiting Configuration (Upstash Redis)
# Sign up at https://upstash.com/ to get these values
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Authentication Configuration (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters

# Admin Configuration
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password_here

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_minimum_32_characters

# ISR Revalidation Configuration
# Generate a secure random string for on-demand revalidation
REVALIDATION_SECRET=your_secure_revalidation_secret_here
NEXT_PUBLIC_REVALIDATION_SECRET=your_secure_revalidation_secret_here

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/avif,application/pdf
UPLOAD_RATE_LIMIT=5     # Files per minute per user

# Environment
NODE_ENV=development

# Optional: External Services
# VIRUS_SCAN_API_KEY=your_virus_scan_service_key
# LOGGING_SERVICE_URL=your_logging_service_url
# MONITORING_API_KEY=your_monitoring_service_key

# Database Configuration (if using additional databases)
# DATABASE_URL=your_database_connection_string

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session Configuration
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds
REMEMBER_ME_DURATION=2592000000  # 30 days in milliseconds 